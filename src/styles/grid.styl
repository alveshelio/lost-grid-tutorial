@import 'reset/reset.css'
//@lost flexbox flex

$block = 30px

html
  font-family: 'Roboto'
  font-weight: 300
  font-size: 24px
  color: #fff
  height: auto
  padding: $block


div
  div
    lost-utility: clearfix;
    height: 100px
    line-height: 100px
    text-align: center
    margin-top: 0
    margin-bottom: $block

    div
      margin-top: 0
      margin-bottom: 0
      lost-utility: clearfix;


section
  lost-center: 1140px
  lost-utility: clearfix;
  margin-top: $block
  margin-bottom: $block
  padding: $block $block 0

  h1
    margin: 0 0 30px 0
  &:last-of-type
    margin-bottom: 0


  // Responsive Blocks
  &:nth-of-type(1)
    background: #42CAFD
    div

      div
        lost-column: 1/1
        background: darken(#42CAFD, 10%)
        @media (min-width: 500px)
          lost-column: 1/2
        @media (min-width: 800px)
          lost-column: 1/3
        @media (min-width: 1100px)
          lost-column: 1/4


  // Offset
  &:nth-of-type(2)
    background: #66b3ba

    div

      div
        lost-column: 1/3
        background: darken(#66b3ba, 20%)

      div:first-child
        lost-offset: -1/3


  // Nested Grid
  &:nth-of-type(3)
    background: #8eb19d

    div

      div
        lost-column: 1/1
        background: darken(#8eb19d, 20%)

        @media(min-width: 500px)
          lost-column: 1/3

        @media(max-width: 499px)
          &:last-child
            float: none

        div
          background: darken(#8eb19d, 35%)
          lost-column: 1/1
          margin-bottom: $block

          @media(min-width: 500px)
            lost-column: 1/2


  // Centered grid
  &:nth-of-type(4)
    background: #f0d2d1
    height: 400px

    div
      lost-align: center
      background: darken(#f0d2d1, 15%)
      height: 285px
      float: none

      div
        background: darken(#f0d2d1, 30%)
        lost-column: 1/3
        height: 100px


  // Cycle
  &:nth-of-type(5)
    background: #f19a3e
    div

      div
        lost-column: 1/1
        background: darken(#f19a3e, 10%)
        padding: ($block / 2)
        height: auto

        @media(min-width: 500px)
          lost-column: 2/4 2

        @media(min-width: 800px)
          lost-column: 2/6 3

        @media(min-width: 1100px)
          lost-column: 2/8 4

      p
        line-height: 25px
        font-size: 16px


  // Vertical Rows
  &:nth-of-type(6)
    background: #1e90ff

    div
      margin-bottom: $block
      div
        lost-row: 1/3
        background: darken(#1e90ff, 15%)


  // Waffle Row
  &:nth-of-type(7)
    background: #ff6347

    div
      margin-bottom: $block
      lost-utility: clearfix

      div
        lost-waffle: 1/3
        background: darken(#ff6347, 15%)


  // Variying Size
  &:nth-of-type(8)
    background: #5f9ea0

    div

      div
        background: darken(#5f9ea0, 20%)
        &:first-child
          lost-column: 1/3
        &:last-child
          lost-column: 2/3


  // Ordering Grids
  &:nth-of-type(9)
    background: #00ff7f

    div

      div
        background: darken(#00ff7f, 30%)
        lost-column: 1/2

        &:first-child
          lost-move: 1/2

        &:last-child
          lost-move: -1/2
